---
import "../styles/form.css";
---

<main class="container-formulario">
  <div class="register-form">
    <h2>Regístrate ahora</h2>
  </div>
  <form action="" method="post" class="form">
    <div class="container-texto">
      <div class="texto-form">
        <h2>Confirma el servicio que deseas</h2>
      </div>
      <div class="contaier-box-form">
        <div class="box-form"></div>
        <div class="box-form"></div>
        <div class="box-form"></div>
      </div>
    </div>
    <div class="formulario">
        <label>Nombre de usuario:</label>
        <input type="text" required placeholder="Escribe tu nombre de usuario">
        <label>Correo electronico:</label>
        <input type="text" name="" id="" placeholder="Escribe tu correo electronico" required>
        <label>Contraseña:</label>
        <input type="password" name="" id="" placeholder="Escribe una contraseña" required>
        <label>Déjanos conocer tu emprendimiento.</label>
        <textarea name="" id="" cols="30" rows="10"></textarea>
        <button>Enviar</button>
    </div>
  </form>
  <div class="img-decoracion"></div>
</main>
